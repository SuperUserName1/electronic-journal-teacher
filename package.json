{
    "name": "electronic-journal-teacher",
    "version": "1.0.0",
    "description": "Электронный журнал преподавателя для высших учебных заведений",
    "author": {
        "name": "Nikita",
        "email": "support@ejournal.local"
    },
    "main": "main/main.js",
    "scripts": {
        "start": "concurrently -r \"cross-env NODE_ENV=development node scripts/start-electron.js\" \"npm run dev\"",
        "dev": "webpack serve --mode development --config webpack.config.js --port 3000 --host 0.0.0.0",
        "build": "webpack --mode production --config webpack.config.js",
        "package": "electron-builder",
        "package-win": "electron-builder --win --x64",
        "package-win-installer": "electron-builder --win --x64 --config.win.target=nsis",
        "package-win-portable": "electron-builder --win --x64 --config.win.target=portable",
        "package-all": "electron-builder --win --x64 --linux --mac"
    },
    "build": {
        "appId": "com.electronicjournal.teacher",
        "productName": "ЭЖП: Электронный Журнал Преподавателя",
        "directories": {
          "output": "dist",
          "buildResources": "assets"
        },
        "files": [
          "main/**/*",
          "renderer/dist/**/*",
          "node_modules/**/*",
          "assets/**/*",
          "package.json"
        ],
        "asar": true,
        "asarUnpack": [
          "**/node_modules/sqlite3/**/*",
          "**/node_modules/better-sqlite3/**/*",
          "**/node_modules/*.node"
        ],
        "nodeGypRebuild": true,
        "npmRebuild": false,
        "win": {
          "target": [
            {
              "target": "nsis",
              "arch": ["x64"]
            }
          ],
          "icon": "assets/icons/icon.ico",
          "publisherName": "Nikita"
        },
        "nsis": {
          "oneClick": false,
          "perMachine": false,
          "allowToChangeInstallationDirectory": true,
          "createDesktopShortcut": true,
          "createStartMenuShortcut": true,
          "shortcutName": "ЭЖП Преподаватель"
        },
        "extraResources": [
          {
            "from": "assets/icons",
            "to": "icons"
          }
        ],
        "publish": null
    }, 
    "dependencies": {
        "chart.js": "^4.4.0",
        "date-fns": "^3.3.1",
        "electron-context-menu": "^3.2.0",
        "file-saver": "^2.0.5",
        "knex": "^3.0.1",
        "node-fetch": "^3.3.2",
        "pdfkit": "^0.17.2",
        "pdfmake": "^0.2.7",
        "pdfmake-fonts": "^0.0.1",
        "react": "^18.2.0",
        "react-chartjs-2": "^5.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.18.0",
        "recharts": "^3.4.1",
        "sqlite3": "^5.1.7",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@babel/core": "^7.23.2",
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@babel/preset-env": "^7.23.2",
        "@babel/preset-react": "^7.22.15",
        "@heroicons/react": "^1.0.6",
        "babel-loader": "^9.1.3",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "css-loader": "^6.8.1",
        "electron": "^27.3.11",
        "electron-builder": "^24.13.3",
        "html-webpack-plugin": "^5.5.3",
        "style-loader": "^3.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1"
    }
}
